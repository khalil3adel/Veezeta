@model Vezeeta.Models.Doctor
@{
    ViewBag.Title = "setupVeezete";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup for a new account | Vezeeta</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <!-- Vendor CSS Files -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <!-- My Styling -->
    <link href="~/Content/CSS/DoctorSignup.css" rel="stylesheet">
    <link href="~/Content/CSS/Sidebar.css" rel="stylesheet">
    <link href="~/Content/CSS/style.css" rel="stylesheet" />
    <link rel="icon" href="~/Content/images/logohead.jfif" />
    <style>
        h3 {
            font-weight: 500;
            margin-bottom: 24px;
            font-size: 18px;
            color: rgb(88, 89, 91)
        }

        .book:after {
            content: "";
            display: block;
            position: relative;
            width: 100%;
            height: 1px;
            background-color: #e0e0e0;
            margin-bottom: 24px;
            margin-top: 24px;
        }

        button {
            direction: ltr;
            display: flex;
            -webkit-box-align: center;
            align-items: center;
            border: 1px solid rgb(224, 224, 224);
            -webkit-box-pack: center;
            justify-content: center;
            border-radius: 4px;
            height: 36px;
            padding: 0px 20px;
            transition: all 100ms ease-out 0s;
            outline: none;
            position: relative;
            max-width: max-content;
            background-color: transparent;
            flex-direction: row;
        }
    </style>
</head>
<body>
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center ">
            <a href="/HomePage/HomePage/" class="logo me-auto"><img src="~/Content/images/logo.png" alt=""></a>
            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li class="dropdown" style="width:100px;">
                        <a href="#"><span><img src="~/Content/country-flags-16px/16/eg_16.png" /> مصر</span></a>
                        <ul style="padding-right: 200px">
                            <li><a href="#">السعودية<img src="~/Content/country-flags-16px/16/sa_16.png" /></a></li>
                            <li><a href="#">مصر<img src="~/Content/country-flags-16px/16/eg_16.png" /></a></li>
                            <li><a href="#">الاردن<img src="~/Content/country-flags-16px/16/jo_16.png" /></a></li>
                            <li><a href="#">لبنان<img src="~/Content/country-flags-16px/16/lb_16.png" /></a></li>
                            <li><a href="#">نيجيريا<img src="~/Content/country-flags-16px/16/ng_16.png" /></a></li>
                            <li><a href="#">كينيا<img src="~/Content/country-flags-16px/16/ke_16.png" /></a></li>
                            <li><a href="#">النسخه العالمية<img src="~/Content/country-flags-16px/16/global.jpg" /></a></li>
                        </ul>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
        </div>
    </header><!-- End Header -->

    <br /><br /><br /><br />

    <div class="">
        <!-- <div class="top-bar">
            <img class="vimg" src="https://cdn.vezeeta.com/account-mgmt-web/1-22-7/assets/logo.png" />

            <select class="selectpicker countrypicker" data-flag="true"></select>

        </div> -->
        <div class="main-container">
            <div style="padding: 48px 0;background-color:white;">
                <div class="signup-step ">
                    <a href="/CreateEntity/createentity/"><div class="fa fa-arrow-left text-primary"></div></a>
                    <div>
                        <h1 class="doc-reg-title">Setup Vezeeta Book</h1>
                        <h3 class="promption ">
                            Create your branches and locate their areas. You will need to select the specialty groups supported in each branch.
                        </h3>
                    </div>
                </div>
                <div style="padding: 0 84px;">
                    @using (Html.BeginForm("setupVeezete", "SetupVeezeteBook", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div style="margin-bottom: 32px;">
                            <h3 style="font-weight: 500;margin-bottom:16;font-size: 18px;color:rgb(88, 89, 91)">Pricing</h3>
                            <div style="height: 30px;" class="row">

                                @*<div style="width: 40%;"><input name="pricing" type="radio">  Monthly Fees + Transaction</div>
                                <div style="width: 40%;"><input type="radio" name="pricing">  Transaction</div>*@

                                <div style="width: 40%;">
                                    @Html.RadioButtonFor(model => model.ExamineFee, "1" , new { name = "pricing" }) Monthly Fees + Transaction
                                </div>
                                <div style="width: 40%;">
                                    @Html.RadioButtonFor(model => model.ExamineFee, "2", new { name = "pricing" }) Transaction
                                </div>
                                    @Html.ValidationMessageFor(model => model.ExamineFee, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        <div class="book">
                            <div style="margin-bottom: 24px;" class="row">
                                <h3 style="margin-top: 80px;">Branch type</h3>
                                <div class="div-input dropdown custom-select" style="width: 28%">
                                    <span class="input-group-text fa fa-newspaper"></span>
                                    <select name="Speciality" id="Speciality" style="width: 100%" class="form-control">

                                        <option value="" selected disabled>Branch type</option>

                                        <option value="saab">Saab</option>
                                        <option value="mercedes">Mercedes</option>
                                        <option value="audi">Audi</option>
                                    </select>

                                </div>

                            </div>
                            <div style="width: 100%;margin-bottom: 50px;margin-top:40px ;" class="row">
                                <div style="margin-right: 30px;width: 32%;">
                                    <h3>Branch name</h3>
                                    <div class="div-input  ">

                                        <span class="input-group-text fa fa-newspaper"></span>

                                        @*<input type="text" class="form-control" placeholder="Branch Name" />*@

                                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", placeholder = "Branch Name" } })
                                        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div style="width: 55%;">
                                    <h3>Location</h3>
                                    <div class="row">
                                        <div class="div-input dropdown custom-select" style="width: 50%">
                                            <span class="input-group-text fa fa-map-marker-alt"></span>

                                            <select class="select form-control center" id="province" onchange="filterCity()" style="width:100%;margin-right: 1px;">
                                                <option value="1">Seclet City</option>
                                                <option value="2">Alexandria</option>

                                                <option value="3">Aswan</option>
                                            </select>


                                        </div>
                                        <div class="div-input dropdown custom-select" style="width: 50%">
                                            <span class="input-group-text fa fa-map-marker-alt"></span>
                                            <select class="select form-control center" id="city" style="width:100%;" disabled>
                                                <option data-province="Alexandria" value="1">New Manshia</option>
                                                <option data-province="Alexandria" value="2">Al Nasseria</option>
                                                <option data-province="Aswan" value="3">Daraw</option>
                                                <option data-province="Aswan" value="4">Edfu</option>
                                            </select>
                                            <span id="option-container" style="visibility: hidden; position:absolute;"></span>
                                        </div>
                                    </div>

                                </div>


                            </div>

                        </div>
                        <div>
                            <button>
                                <div class="fa fa-plus text-primary" style="font-size: 12px; margin-right: 10px;"></div>
                                <span style="color:rgb(0, 112, 205);font-size: 12px;font-weight: 500;">Add Branch</span>
                            </button>
                        </div>
                        <div class="center">
                            <a href="/SetupVezeetaBook.html">
                                <input type="button" value="Subscribe >" class="btn btn-primary" style="font-weight: 400; font-size: 15px;" />
                            </a>
                        </div>
                    }
                </div>
                    

                <script>
                    function filterCity() {
                        var province = $("#province").find('option:selected').text(); // stores province
                        $("#option-container").children().appendTo("#city"); // moves <option> contained in #option-container back to their <select>
                        var toMove = $("#city").children("[data-province!='" + province + "']"); // selects city elements to move out
                        toMove.appendTo("#option-container"); // moves city elements in #option-container
                        $("#city").removeAttr("disabled"); // enables select
                    };

                </script>
                <script src="~/Content/jss/JQuery-3.3.1.js"></script>

                <script src="~/Scripts/jquery.validate.js"></script>
                <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>

