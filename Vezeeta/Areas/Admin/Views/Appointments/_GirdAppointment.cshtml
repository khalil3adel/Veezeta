@model IEnumerable<Vezeeta.Models.Appointment>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Doctor.FullName)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patient.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() != 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { did = item.DoctorID ,pid=item.PatientID}, new { @class = "btn btn-primary mb-1" })
                    @Html.ActionLink("Details", "Details", new { did = item.DoctorID, pid = item.PatientID }, new { @class = "btn btn-info mb-1" })
                    @Html.ActionLink("Delete", "Delete", new { did = item.DoctorID, pid = item.PatientID }, new { @class = "btn btn-danger mb-1" })
                </td>

            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="8" class="text-center" width="100%">No Record Found !</td>
        </tr>
    }

</table>
