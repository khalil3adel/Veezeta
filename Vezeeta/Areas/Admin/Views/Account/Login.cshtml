@model Vezeeta.Areas.Admin.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_OffLine.cshtml";
}



<div id="layoutAuthentication_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                        <div class="card-body">
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                @*@Html.ValidationSummary();*@
                                <div class="form-group">
                                    @Html.LabelFor(l => l.Email)
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control py-4", placeholder = "Enter email address" })
                                    @*<input class="form-control py-4" id="inputEmailAddress" type="email" placeholder="Enter email address" />*@
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(l => l.PassWord)
                                    @Html.TextBoxFor(m => m.PassWord, new { @class = "form-control py-4", placeholder = "Enter password" })
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" />
                                        <label class="custom-control-label" for="rememberPasswordCheck">Remember password</label>
                                    </div>
                                </div>
                                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                    <a class="small" href="password.html">Forgot Password?</a>
                                    <button type="submit" class="btn btn-primary">Login</button>

                                </div>
                            }
                        </div>
                        @if (Model != null && Model.Massage != null)
                        {
                            <div class="card-footer text-center alert-danger">
                                @Model.Massage
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </main>
</div>